<swiper indicator-dots="true" autoplay="true" interval="10000" duration="1000">
  <block wx:for="{{picArrs}}" wx:for-index="index">
    <swiper-item>
      <image src="{{item}}" class="slide-image" mode="aspectFill"/>
      <button class="btn" bindtap="start" wx:if="{{index == picArrs.length - 1}}">立即体验</button>
    </swiper-item>
  </block>
</swiper>
